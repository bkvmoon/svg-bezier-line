{
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "declarationMap": true,
    "sourceMap": true,
//    "declarationDir": "./lib/types",
  },
  "compileOnSave": true
}
